<button type="button" class="partners-link text-left" data-toggle="modal"
        data-target="#modalFormInfos{{ partner.id }}">
    {{ partner.name|capitalize }}
</button>
<div class="modal fade" id="modalFormInfos{{ partner.id }}" tabindex="-1" role="dialog"
     aria-labelledby="modalFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalFormLongTitle">
                    {{ partner.name|capitalize }}
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="info-partner">
                <p>Nom : {{ partner.name|capitalize }}</p>
                <p>Site : {{ partner.url }}</p>
                <p>Logo ou image : <img src="/uploads/{{ partner.image }}" alt="{{ partner.name }}"></p>
                <div class="buttons d-flex">
                    <button type="button" class="btn button-light" data-toggle="modal"
                            data-target="#modalFormEdit{{ partner.id }}">
                        Modifier
                    </button>
                    <form action="/admin/deletePartner" method="post">
                        <input type="hidden" name="id" value="{{ partner.id }}">
                        <button class="btn button-light delete">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
