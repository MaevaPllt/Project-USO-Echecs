{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Admin | Partenaires{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/partnersAdmin.css">
{% endblock %}

{% block header %}
    {% include 'includes/_adminNavbar.html.twig' %}
{% endblock %}

{% block content %}
    <section>
        <div class="text-center title">
            <h1>Partenaires - administration</h1>
        </div>
        <div class="container d-flex flex-column">
            <div class="container partners-add">
                {% include 'Admin/Partners/_add.html.twig' %}
            </div>
            {% for partner in partners %}
                <div class="container partners_list">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <div class="col-md-6 col-sm-8 offset-lg-1 partners-link">
                            {% include 'Admin/Partners/_show.html.twig' %}
                        </div>
                        <div class="col-md-4 col-8 offset-lg-1 d-flex justify-content-around buttons">
                            {% include 'Admin/Partners/_edit.html.twig' %}
                            {% include 'Admin/Partners/_delete.html.twig' %}
                        </div>
                    </div>
                    <hr>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block javascript %}
{% if errorsAdd is not empty %}
<script src="/assets/js/openModalAdd.js"></script>
{% endif %}
{% if errorsEdit is not empty %}
<script>$(document).ready(function () {
    $('#modalFormEdit{{ partnerEdit.id }}').modal();
});</script>
{% endif %}
{% endblock %}
