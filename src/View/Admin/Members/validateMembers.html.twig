{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Admin | Membres{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/membersAdmin.css">
{% endblock %}

{% block header %}
    {% include 'includes/_adminNavbar.html.twig' %}
{% endblock %}

{% block content %}
    <section>
        <div class="text-center title">
            <h1>Membres en attente de validation</h1>
        </div>
        <hr>
        <div class="container d-flex flex-column">
            {% if members is not empty %}
            {% for member in members %}
                <div class="container members_list">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <div class="col-md-4 col-sm-8 offset-lg-1 members-link">
                            {% include 'Admin/Members/_showValidate.html.twig' %}
                        </div>
                        <div class="col-md-4 col-12 offset-lg-1 d-flex justify-content-around buttons">
                            {% include 'Admin/Members/_validate.html.twig' %}
                            {% include 'Admin/Members/_edit.html.twig' %}
                            {% include 'Admin/Members/_refuse.html.twig' %}
                        </div>
                    </div>
                    <hr>
                </div>
            {% endfor %}
            {% else %}
            <p class="text-center my-5">Aucun membre en attente de validation</p>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascript %}
{% if errorsAdd is not empty %}
<script src="/assets/js/openModalAdd.js"></script>
{% endif %}
{% if errorsEdit is not empty %}
<script>$(document).ready(function () {
    $('#modalFormEdit{{ memberEdit.id }}').modal();
});</script>
{% endif %}
{% endblock %}
